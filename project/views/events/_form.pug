.form-group
  label(for="title") Event Title
  input.form-control(type="text", name="title", placeholder="Pleas Enter Event Name", value=event.title)
.form-group
  label(for="title") Location
  input.form-control(type="text", name="title", placeholder="Please Enter Event Location", value=event.title)
.form-group
  label(for="event") Starting & Finishing Time
  input.form-control(type="text", name="content", placeholder="Start at", value=event.content)
  input.form-control(type="text", name="content", placeholder="Finish at", value=event.content)
.form-group
label(for="type") Event Type & Category
<div class="type">
    <select class="form-control mr-sm-2" role="listbox" value=event.content>
        <option value="">Business</option>
        <option value="science&tech">Science & Tech</option>
        <option value="other">Other</option>
        <option value="health">Health</option>
        <option value="family&education">Family & Education</option>
        <option value="food&drink">Food & Drink</option>
        <option value="hoilday">Holiday</option>
        <option value="home&lifestyle">Home & Lifestyle</option>
    </select>
    <select class="form-control mr-sm-2" role="listbox" value=event.content>
        <option value="">Class</option>
        <option value="conference">Conference</option>
        <option value="festival">Festival</option>
        <option value="networking">Networking</option>
        <option value="seminar">Seminar</option>
        <option value="party">Party</option>
        <option value="other">Other</option>
        <option value="screening">Screening</option>
    </select>
</div>

  label(for="event") Details
  textarea.form-control(name="content", rows="5")= event.content
.form-group
  label(for="event") Team Name
  input.form-control(type="text", name="content", placeholder="Please Enter Team Name", value=event.content)
.form-group
  label(for="event") Team Description
  input.form-control(type="text", name="content", placeholder="Please Enter Team Description", value=event.content)
.form-group
  label(for="tags") Tags
  input.form-control(type="text", name="tags", placeholder="tags separated by spaces", value=event.tags ? event.tags.join(" ") : "")
